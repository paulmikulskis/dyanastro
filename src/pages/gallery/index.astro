---
import Layout from '../../layouts/Page.astro';
import { Picture } from '@astrojs/image/components';
---

<style>
    h1 {
        color: rgb(58, 58, 82);
        text-align: center;
        margin-bottom: 1em;
    }
    .gallery {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        justify-items: center;
        margin: auto;
        max-width: 90vw;
    }
    .gallery img {
        border-radius: 10px;
        object-fit: cover;
        height: 100%;
        width: 100%;
        transition: transform .2s;
    }
    .gallery img:hover {
        transform: scale(1.1);
    }
</style>

<Layout>
    <h1>Loading Gallery...</h1>
    <div class="gallery">
        {Array(12).fill(0).map((_, index) => (
            <Picture
                src={`/gallery/image${index + 1}.png`}
                widths={[200, 400, 800]}
                aspectRatio="1:1"
                sizes="(max-width: 800px) 100vw, 800px"
                alt={`Dyana Butler Gallery Image ${index + 1}`}
            />
        ))}
    </div>
</Layout>
