---
import { Button, FormInput, FormSelect, FormTextarea } from '@littlesticks/odyssey-theme-components';

const selectOptions = [
  "Google Search",
  "Social Media",
  "Email",
]

---

<form name="Contact Form" method="POST" action="https://formspree.io/f/xrgvldge">
  <FormInput type="text" label="Name" name="Name" placeholder="Jane Goodall" />
  <FormInput type="email" label="Email" name="Email" placeholder="hello@example.com" />
  <FormTextarea label="Message" name="Message" placeholder="what should we chat about?" />
  <Button>Submit</Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>